FROM ubuntu:22.04

# å®‰è£…å¿…è¦çš„åŒ…
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# ä¸‹è½½å¹¶å®‰è£… Ollama
RUN curl -L https://github.com/ollama/ollama/releases/download/v0.1.29/ollama-linux-amd64 -o /usr/local/bin/ollama \
    && chmod +x /usr/local/bin/ollama

# åˆ›å»ºå¯åŠ¨è„šæœ¬
RUN echo '#!/bin/bash' > /start.sh && \
    echo 'echo "ğŸš€ å¯åŠ¨ Ollama æœåŠ¡..."' >> /start.sh && \
    echo 'export OLLAMA_HOST=0.0.0.0' >> /start.sh && \
    echo 'ollama serve &' >> /start.sh && \
    echo 'sleep 5' >> /start.sh && \
    echo 'echo "ğŸŒ å¯åŠ¨ CORS ä»£ç†..."' >> /start.sh && \
    echo 'node /app/cors-proxy.js' >> /start.sh && \
    chmod +x /start.sh

# è®¾ç½®å·¥ä½œç›®å½•
WORKDIR /app

# å¤åˆ¶ CORS ä»£ç†æ–‡ä»¶
COPY cors-proxy.js .
COPY package.json .

# å®‰è£… Node.js ä¾èµ–
RUN curl -fsSL https://deb.nodesource.com/setup_18.x | bash - \
    && apt-get install -y nodejs \
    && npm install

# æš´éœ²ç«¯å£
EXPOSE 10000 11434

# å¯åŠ¨æœåŠ¡
CMD ["/start.sh"]
